@page "/"
@inject IJSRuntime JSRuntime

<PageTitle>Subnetting Calculator</PageTitle>

<div id="main-container">
	<div id="base-ip">
		<p>Base IP</p>
		<input type="text"/>
	</div>
	<div id="subnets">
		<div id="subnet-title">
			<p>Subnets</p>
		</div>
		<div id="subnet-container">
			<table>
				<thead>
					<tr>
						<th>Name</th>
						<th>Size</th>
					</tr>
				</thead>
				<tbody>
					@for(int i = 1; i <= _subnetNumber; i++)
					{
						<tr>
							<td><input type="text" value="LAN @i" /></td>
							<td><input type="number" min="1" class="size"/></td>
						</tr>
					}
				</tbody>
			</table>

		</div>
		<div id="subnet-number">
			<p> Number of subnets</p>
			<input type="number" min="1" @oninput="CheckMinValue" @bind="_subnetNumber" />
		</div>
	</div>
	<div id="submit-btn">
		<input type="submit" value="Calculate" @onclick="Calculate"/>
	</div>
	
</div>

